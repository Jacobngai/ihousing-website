---
/**
 * BlogPost Layout - Beautiful blog post layout with markdown rendering
 * Parses markdown content and displays it with beautiful styling
 */

interface Props {
  title: string;
  description: string;
  image?: string;
  date: string;
  category: string;
  language: string;
  content: string;
  faq?: Array<{ question: string; answer: string }>;
}

const { title, description, image, date, category, language, content, faq } = Astro.props;
const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'https://ihousing.com.my';
const ogImage = image || `${siteUrl}/images/og-default.jpg`;

// Get language-specific labels
const labels = {
  en: {
    readMore: 'Read more',
    backToBlog: '← Back to Blog',
    published: 'Published',
    category: 'Category',
    home: 'Home',
    blog: 'Blog',
    contactUs: 'Contact Us',
    readyToStart: 'Ready to Start Your Airbnb Journey?',
    contactDesc: 'Contact iHousing today for a free consultation about your Melaka property.',
    contactNow: 'Contact Us Now'
  },
  ms: {
    readMore: 'Baca lagi',
    backToBlog: '← Kembali ke Blog',
    published: 'Diterbitkan',
    category: 'Kategori',
    home: 'Utama',
    blog: 'Blog',
    contactUs: 'Hubungi Kami',
    readyToStart: 'Bersedia untuk Memulakan Perjalanan Airbnb Anda?',
    contactDesc: 'Hubungi iHousing hari ini untuk konsultasi percuma mengenai hartanah Melaka anda.',
    contactNow: 'Hubungi Kami Sekarang'
  },
  zh: {
    readMore: '阅读更多',
    backToBlog: '← 返回博客',
    published: '发布于',
    category: '分类',
    home: '首页',
    blog: '博客',
    contactUs: '联系我们',
    readyToStart: '准备开始您的Airbnb之旅？',
    contactDesc: '今天联系iHousing，免费咨询您在马六甲的房产。',
    contactNow: '立即联系我们'
  }
};

const t = labels[language as keyof typeof labels] || labels.en;
const langPath = language === 'en' ? 'en' : language === 'ms' ? 'ms' : 'zh';
const contactFormLink = `/${langPath}/contact-form/`;
const whatsappLink = 'https://wa.me/60196996688?text=Hi%20iHousing%2C%20I%27m%20interested%20in%20property%20management';
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:type" content="article" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="article:published_time" content={date} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <!-- Preconnect -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Merriweather:ital,wght@0,300;0,400;0,700;1,400&display=swap" rel="stylesheet" />

    {faq && (
      <script type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "FAQPage",
        "mainEntity": faq.map(item => ({
          "@type": "Question",
          "name": item.question,
          "acceptedAnswer": {
            "@type": "Answer",
            "text": item.answer
          }
        }))
      })} />
    )}
  </head>

  <body class="antialiased font-sans bg-gray-50 text-gray-900">
    <!-- Header -->
    <header class="bg-white border-b border-gray-200 sticky top-0 z-50 shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <a href={`/${langPath}/`} class="text-2xl font-bold text-green-800">iHousing</a>

          <nav class="hidden md:flex items-center space-x-6">
            <a href={`/${langPath}/`} class="text-gray-700 hover:text-green-700 font-medium">{t.home}</a>
            <a href={`/${langPath}/blog/`} class="text-gray-700 hover:text-green-700 font-medium">{t.blog}</a>
            <a href={whatsappLink} target="_blank" rel="noopener" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-semibold transition-colors">
              {t.contactUs}
            </a>
          </nav>

          <!-- Mobile menu button -->
          <button id="mobile-menu-btn" class="md:hidden text-gray-700 focus:outline-none">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Mobile Menu -->
      <div id="mobile-menu" class="hidden md:hidden px-4 py-4 bg-white border-t border-gray-200">
        <a href={`/${langPath}/`} class="block py-2 text-gray-700 hover:text-green-700 font-medium">{t.home}</a>
        <a href={`/${langPath}/blog/`} class="block py-2 text-gray-700 hover:text-green-700 font-medium">{t.blog}</a>
        <a href={whatsappLink} target="_blank" rel="noopener" class="block mt-2 bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-semibold text-center">
          {t.contactUs}
        </a>
      </div>
    </header>

    <script is:inline>
      const mobileMenuBtn = document.getElementById('mobile-menu-btn');
      const mobileMenu = document.getElementById('mobile-menu');
      if (mobileMenuBtn && mobileMenu) {
        mobileMenuBtn.addEventListener('click', () => {
          mobileMenu.classList.toggle('hidden');
        });
      }
    </script>

    <!-- Hero Section -->
    <div class="bg-gradient-to-br from-green-800 to-green-900 text-white py-16 md:py-24">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <a href={`/${langPath}/blog/`} class="inline-flex items-center text-green-200 hover:text-white mb-6 transition-colors">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          {t.backToBlog}
        </a>

        <div class="flex items-center gap-3 mb-4">
          <span class="inline-block px-3 py-1 bg-green-700 text-green-100 text-sm font-semibold rounded-full">
            {category}
          </span>
          <span class="text-green-200 text-sm">
            {t.published}: {date}
          </span>
        </div>

        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight mb-4">
          {title}
        </h1>

        <p class="text-xl text-green-100">
          {description}
        </p>
      </div>
    </div>

    <!-- Article Content -->
    <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16">
      <!-- Featured Image -->
      {image && (
        <div class="mb-12 rounded-2xl overflow-hidden shadow-xl">
          <img
            src={image}
            alt={title}
            class="w-full h-64 md:h-96 object-cover"
            loading="lazy"
          />
        </div>
      )}

      <!-- Content -->
      <div class="bg-white rounded-2xl shadow-lg p-8 md:p-12">
        <div class="prose prose-lg md:prose-xl max-w-none blog-content" set:html={content} />
      </div>

      <!-- CTA Section -->
      <div class="mt-12 bg-gradient-to-br from-green-50 to-green-100 rounded-2xl p-8 md:p-12 text-center">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4">
          {t.readyToStart}
        </h2>
        <p class="text-gray-700 mb-6 text-lg">
          {t.contactDesc}
        </p>
        <a
          href={whatsappLink}
          target="_blank"
          rel="noopener"
          class="inline-flex items-center bg-green-600 hover:bg-green-700 text-white px-8 py-4 rounded-xl font-semibold text-lg transition-all shadow-lg hover:shadow-xl"
        >
          <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          {t.contactNow}
        </a>
      </div>
    </article>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-12 mt-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-4 gap-8">
          <div>
            <h3 class="text-xl font-bold mb-4">iHousing</h3>
            <p class="text-gray-400">Professional Airbnb property management in Melaka. Flat RM200-300/month fee.</p>
          </div>
          <div>
            <h4 class="font-semibold mb-4">Services</h4>
            <ul class="space-y-2 text-gray-400">
              <li><a href={`/${langPath}/services/full-management/`} class="hover:text-white">Full Management</a></li>
              <li><a href={`/${langPath}/services/renovation/`} class="hover:text-white">Renovation</a></li>
            </ul>
          </div>
          <div>
            <h4 class="font-semibold mb-4">Properties</h4>
            <ul class="space-y-2 text-gray-400">
              <li><a href={`/${langPath}/parkland/avenue-by-the-sea/`} class="hover:text-white">Parkland Avenue</a></li>
              <li><a href={`/${langPath}/properties/`} class="hover:text-white">All Properties</a></li>
              <li><a href={`/${langPath}/blog/`} class="hover:text-white">Blog</a></li>
              <li><a href={`/${langPath}/about/`} class="hover:text-white">About Us</a></li>
            </ul>
          </div>
          <div>
            <h4 class="font-semibold mb-4">{t.contactUs}</h4>
            <p class="text-gray-400 mb-2">Get a free consultation for your property</p>
            <a href={whatsappLink} target="_blank" rel="noopener" class="inline-block bg-green-600 hover:bg-green-500 text-white px-4 py-2 rounded-lg transition-colors">
              WhatsApp Us
            </a>
          </div>
        </div>
        <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-500">
          <p>&copy; {new Date().getFullYear()} iHousing. All rights reserved.</p>
          <p class="mt-2 text-sm">
            <a href={`/${langPath}/privacy/`} class="hover:text-white">Privacy Policy</a> | <a href={`/${langPath}/terms/`} class="hover:text-white">Terms of Service</a>
          </p>
        </div>
      </div>
    </footer>

    <!-- Blog Content Styles -->
    <style is:global>
      .blog-content {
        font-family: 'Merriweather', Georgia, serif;
        color: #1f2937;
        line-height: 1.8;
      }

      .blog-content h1,
      .blog-content h2,
      .blog-content h3,
      .blog-content h4 {
        font-family: 'Inter', system-ui, sans-serif;
        font-weight: 700;
        color: #111827;
        margin-top: 2.5em;
        margin-bottom: 1em;
        line-height: 1.3;
      }

      .blog-content h1 { font-size: 2.25rem; }
      .blog-content h2 { font-size: 1.875rem; }
      .blog-content h3 { font-size: 1.5rem; }
      .blog-content h4 { font-size: 1.25rem; }

      .blog-content p {
        margin-bottom: 1.25em;
        font-size: 1.125rem;
      }

      .blog-content a {
        color: #059669;
        text-decoration: underline;
        text-decoration-thickness: 2px;
        text-underline-offset: 2px;
        transition: color 0.2s;
      }

      .blog-content a:hover {
        color: #047857;
      }

      .blog-content strong {
        font-weight: 700;
        color: #111827;
      }

      .blog-content ul,
      .blog-content ol {
        margin: 1.5em 0;
        padding-left: 1.5em;
      }

      .blog-content li {
        margin-bottom: 0.75em;
        font-size: 1.125rem;
      }

      .blog-content ul {
        list-style-type: disc;
      }

      .blog-content ol {
        list-style-type: decimal;
      }

      .blog-content blockquote {
        margin: 2em 0;
        padding: 1.5em;
        border-left: 4px solid #059669;
        background: linear-gradient(135deg, #ecfdf5 0%, #d1fae5 100%);
        border-radius: 0.5rem;
        font-style: italic;
      }

      .blog-content code {
        background: #f3f4f6;
        padding: 0.2em 0.4em;
        border-radius: 0.25rem;
        font-size: 0.9em;
        font-family: 'Courier New', monospace;
        color: #dc2626;
      }

      .blog-content pre {
        background: #1f2937;
        color: #f9fafb;
        padding: 1.5em;
        border-radius: 0.5rem;
        overflow-x: auto;
        margin: 2em 0;
      }

      .blog-content pre code {
        background: transparent;
        color: inherit;
        padding: 0;
      }

      .blog-content table {
        width: 100%;
        margin: 2em 0;
        border-collapse: collapse;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        border-radius: 0.5rem;
        overflow: hidden;
      }

      .blog-content thead {
        background: linear-gradient(135deg, #059669 0%, #047857 100%);
        color: white;
      }

      .blog-content th,
      .blog-content td {
        padding: 1rem;
        text-align: left;
        border-bottom: 1px solid #e5e7eb;
      }

      .blog-content th {
        font-weight: 600;
        font-family: 'Inter', system-ui, sans-serif;
      }

      .blog-content tbody tr:hover {
        background: #f9fafb;
      }

      .blog-content tbody tr:last-child td {
        border-bottom: none;
      }

      .blog-content hr {
        border: none;
        height: 2px;
        background: linear-gradient(90deg, transparent, #059669, transparent);
        margin: 3em 0;
      }

      .blog-content img {
        border-radius: 0.5rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        margin: 2em 0;
        max-width: 100%;
        height: auto;
      }

      /* Responsive adjustments */
      @media (max-width: 768px) {
        .blog-content h1 { font-size: 1.75rem; }
        .blog-content h2 { font-size: 1.5rem; }
        .blog-content h3 { font-size: 1.25rem; }
        .blog-content p, .blog-content li { font-size: 1rem; }
        .blog-content table { font-size: 0.875rem; }
        .blog-content th, .blog-content td { padding: 0.75rem 0.5rem; }
      }
    </style>
  </body>
</html>
