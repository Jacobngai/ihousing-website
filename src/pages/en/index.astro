---
import Layout from '@/layouts/Layout.astro';

const title = 'iHousing Melaka | Airbnb Management Melaka';
const description = 'Professional Airbnb property management in Melaka. 8 years experience, 700+ properties, 5 platforms. Expert guest screening. Contact us for custom pricing.';
const image = 'https://images.unsplash.com/photo-1560448204-e02f11c3d0e2?w=1200';

// FAQPage JSON-LD Schema
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": {
    "@type": "Question",
    "name": "How do I find Airbnb management near me in Melaka?",
    "acceptedAnswer": {
      "@type": "Answer",
      "text": "When searching for 'Airbnb management near me' in Melaka, focus on companies that are actually based in Melaka rather than just covering it remotely. iHousing is based locally, on-site within 60 minutes for emergencies, and has relationships with Melaka building management and service providers."
    }
  },
  {
    "@type": "Question",
    "name": "Why does proximity matter for Airbnb management?",
    "acceptedAnswer": {
      "@type": "Answer",
      "text": "Local management means faster emergency response, better understanding of Melaka tourism patterns, stronger relationships with local contractors, and optimized pricing based on Melaka's specific market conditions. Remote managers often lack these advantages."
    }
  },
  {
    "@type": "Question",
    "name": "Which areas in Melaka does iHousing cover?",
    "acceptedAnswer": {
      "@type": "Answer",
      "text": "iHousing manages properties across Melaka's key areas: Bukit Cina (Novana), Klebang Beach (Parkland Avenue), Melaka Raya Resort, City Center (The View Residence), and resort properties like Heng Hut Resort. We can also expand coverage to new buildings."
    }
  },
  {
    "@type": "Question",
    "name": "What is iHousing's pricing model?",
    "acceptedAnswer": {
      "@type": "Answer",
      "text": "iHousing offers a transparent flat-fee model starting from RM200-300 per month for Parkland Avenue and competitive rates for other condos. Custom pricing available based on property condition and location."
    }
  }
};
---

<Layout title={title} description={description} image={image}>
  <main>
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-green-900 via-green-800 to-emerald-900 text-white py-20 lg:py-28">
      <div class="absolute inset-0 bg-black/30"></div>
      <div class="relative max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <p class="text-green-300 font-semibold mb-4 text-lg">#1 Airbnb Management in Melaka</p>
        <h1 class="text-3xl lg:text-5xl font-bold leading-tight mb-6">
          Airbnb Management Melaka
        </h1>
        <p class="text-xl lg:text-2xl text-green-100 mb-8 max-w-3xl mx-auto">
          8 years experience. 700+ properties managed. 5 platform listings.
          <br class="hidden sm:block">
          <span class="text-yellow-400 font-bold">Contact us for custom pricing.</span>
        </p>
      </div>
    </section>

    <!-- Services Section -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4 text-center">
          Complete Airbnb Management Solutions
        </h2>
        <p class="text-center text-gray-600 mb-12 text-lg">
          Everything you need to earn from your property.
        </p>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Full Management -->
          <div class="bg-white border-2 border-gray-200 p-8 rounded-xl hover:border-green-500 hover:shadow-xl transition-all">
            <div class="w-14 h-14 bg-green-600 rounded-full flex items-center justify-center mb-4">
              <span class="text-2xl text-white">&#128179;</span>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Full Management</h3>
            <p class="text-gray-600 mb-4">We handle everything. Guest communication, cleaning, maintenance, pricing. You just receive income.</p>
            <a href="/en/services/full-management/" class="text-green-600 font-semibold hover:text-green-700">Learn More →</a>
          </div>

          <!-- Listing Setup -->
          <div class="bg-white border-2 border-gray-200 p-8 rounded-xl hover:border-green-500 hover:shadow-xl transition-all">
            <div class="w-14 h-14 bg-blue-600 rounded-full flex items-center justify-center mb-4">
              <span class="text-2xl text-white">&#127968;</span>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Listing Setup</h3>
            <p class="text-gray-600 mb-4">One-time setup for DIY hosts. Professional photos, optimized listing, pricing strategy.</p>
            <a href="/en/services/listing-setup/" class="text-green-600 font-semibold hover:text-green-700">Learn More →</a>
          </div>

          <!-- Renovation -->
          <div class="bg-white border-2 border-gray-200 p-8 rounded-xl hover:border-green-500 hover:shadow-xl transition-all">
            <div class="w-14 h-14 bg-purple-600 rounded-full flex items-center justify-center mb-4">
              <span class="text-2xl text-white">&#128726;</span>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Renovation</h3>
            <p class="text-gray-600 mb-4">Convert empty unit to Airbnb-ready. Furnishing, design, full setup.</p>
            <a href="/en/services/renovation/" class="text-green-600 font-semibold hover:text-green-700">Learn More →</a>
          </div>

          <!-- 5 Platforms -->
          <div class="bg-white border-2 border-gray-200 p-8 rounded-xl hover:border-green-500 hover:shadow-xl transition-all">
            <div class="w-14 h-14 bg-yellow-600 rounded-full flex items-center justify-center mb-4">
              <span class="text-2xl text-white">5</span>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">5 Platforms</h3>
            <p class="text-gray-600 mb-4">We list on Airbnb, Booking.com, Agoda, Expedia, Agoda Homes. 60% more bookings.</p>
            <a href="/en/services/how-it-works/" class="text-green-600 font-semibold hover:text-green-700">Learn More →</a>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-8 text-center">
          Frequently Asked Questions
        </h2>

        <div class="space-y-4">
          <details class="bg-white p-6 rounded-xl shadow-sm">
            <summary class="font-bold text-gray-900 cursor-pointer">How much are Airbnb management fees in Melaka?</summary>
            <p class="mt-3 text-gray-600">Most companies charge 20-30% commission. iHousing offers a transparent flat-fee model starting from RM200-300 per month for Parkland Avenue and competitive rates for other condos. Custom pricing available based on property condition and location.</p>
          </details>

          <details class="bg-white p-6 rounded-xl shadow-sm">
            <summary class="font-bold text-gray-900 cursor-pointer">Is Airbnb legal in Melaka?</summary>
            <p class="mt-3 text-gray-600">Yes, short-term rentals are legal in Melaka. However, individual buildings (stratified properties) may have their own bylaws. iHousing helps owners navigate MOTAC licensing and building-specific rules.</p>
          </details>

          <details class="bg-white p-6 rounded-xl shadow-sm">
            <summary class="font-bold text-gray-900 cursor-pointer">Which platforms do you list my property on?</summary>
            <p class="mt-3 text-gray-600">We maximize your occupancy by listing on 5 major platforms: Airbnb, Booking.com, Agoda, Expedia, and Agoda Homes. This multi-channel approach typically increases bookings by 60% compared to Airbnb alone.</p>
          </details>

          <details class="bg-white p-6 rounded-xl shadow-sm">
            <summary class="font-bold text-gray-900 cursor-pointer">How do you handle cleaning and maintenance?</summary>
            <p class="mt-3 text-gray-600">We have our own in-house cleaning and maintenance teams. This ensures strict quality control and faster response times for guest issues compared to companies that outsource these critical services.</p>
          </details>
        </div>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="py-16 bg-white">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-12 text-center">
          Why Choose iHousing?
        </h2>

        <div class="grid md:grid-cols-3 gap-8 text-center">
          <div>
            <p class="text-4xl lg:text-5xl font-bold text-green-600 mb-2">700+</p>
            <p class="text-gray-600 mt-2">Properties Managed</p>
          </div>
          <div>
            <p class="text-4xl lg:text-5xl font-bold text-green-600 mb-2">8</p>
            <p class="text-gray-600 mt-2">Years Experience</p>
          </div>
          <div>
            <p class="text-4xl lg:text-5xl font-bold text-green-600 mb-2">5</p>
            <p class="text-gray-600 mt-2">Booking Platforms</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Testimonials -->
    <section class="py-16 bg-gray-900 text-white">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl lg:text-4xl font-bold mb-12 text-center">
          Trusted by 700+ Property Owners
        </h2>
        <div class="grid md:grid-cols-3 gap-8 text-center">
          <div class="bg-gray-800 p-6 rounded-xl">
            <div class="flex justify-center mb-4">
              <div class="flex text-yellow-400">
                <span>&#9733;</span><span>&#9733;</span><span>&#9733;</span><span>&#9733;</span>
              </div>
            </div>
            <p class="text-gray-300 mb-4">"I was paying 20% commission to my previous manager. Switched to iHousing and now pay much less. Same service, more savings."</p>
            <p class="text-green-400 font-semibold">— Silverscape Owner</p>
          </div>

          <div class="bg-gray-800 p-6 rounded-xl">
            <div class="flex justify-center mb-4">
              <div class="flex text-yellow-400">
                <span>&#9733;</span><span>&#9733;</span><span>&#9733;</span><span>&#9733;</span>
              </div>
            </div>
            <p class="text-gray-300 mb-4">"They listed my property on 5 platforms instead of just 1. My bookings increased by 70% in the first month."</p>
            <p class="text-green-400 font-semibold">— The Shore Owner</p>
          </div>

          <div class="bg-gray-800 p-6 rounded-xl">
            <div class="flex justify-center mb-4">
              <div class="flex text-yellow-400">
                <span>&#9733;</span><span>&#9733;</span><span>&#9733;</span><span>&#9733;</span>
              </div>
            </div>
            <p class="text-gray-300 mb-4">"Professional team, responsive communication. They handle everything so I don't have to worry about my investment."</p>
            <p class="text-green-400 font-semibold">— Imperio Owner</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Final CTA -->
    <section class="py-20 bg-gradient-to-br from-green-600 to-emerald-700 text-white">
      <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl lg:text-4xl font-bold mb-6">
          Ready to Start Earning More from Your Property?
        </h2>
        <p class="text-xl text-green-100 mb-8">
          Let's have a quick chat. No pressure, no obligations. Just tell us about your property and we'll explain how we can help.
        </p>
        <a
          href="/en/contact-form/"
          class="inline-block bg-yellow-500 hover:bg-yellow-400 text-green-900 font-bold py-4 px-12 rounded-lg text-xl transition-all transform hover:scale-105 shadow-lg"
        >
          Contact Us Now
        </a>
      </div>
    </section>

    <!-- Organization Sitelinks Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "iHousing",
      "url": "https://ihousing.net",
      "logo": "https://ihousing.net/favicon.ico",
      "description": "Professional Airbnb property management in Melaka. 8 years experience, 700+ properties managed across Bukit Cina, Klebang Beach, Melaka Raya Resort, and Parkland Avenue. On-site emergency response within 60 minutes. Custom flat-fee pricing available.",
      "sameAs": ["iHousing Melaka", "iHousing Management", "iHousing"],
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "+60 19 6699 688",
        "contactType": "WhatsApp",
        "areaServed": ["Melaka"],
        "availableLanguage": ["English", "Malay", "Chinese"],
        "contactOption": "Contact via WhatsApp",
        "openingHours": "Mo-Sa 09:00-18:00"
      },
      "areaServed": {
        "@type": "GeoCircle",
        "geoMidpoint": {
          "@type": "GeoCoordinates",
          "latitude": 2.2180,
          "longitude": 102.2822
        },
        "geoRadius": 50
      }
    }
    </script>
  </main>
</Layout>
