---
import Layout from '@/layouts/Layout.astro';

const title = "Blog - Panduan Pengurusan Airbnb & Tips Pelaburan Hartanah Melaka";
const description = "Panduan pakar tentang pengurusan Airbnb, pelaburan hartanah Melaka, strategi harga, dan kisah kejayaan sewa pendek.";
const image = "/images/blog/blog-index.jpg";

// TEMPORARY: Static blog listing
// TODO: Implement proper content collection or dynamic loading
const blogPosts = [
  // Blog posts will be listed here once proper content collection is set up
];
---

<Layout title={title} description={description} image={image}>
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <header class="text-center mb-12">
      <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4">Blog</h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Panduan pakar tentang pengurusan Airbnb, pelaburan hartanah Melaka, strategi harga, dan kisah kejayaan sewa pendek.
      </p>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {blogPosts.map(({ title, description, date, slug }) => (
        <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
          <a href={`/ms/blog/${slug}`} class="block">
            <div class="p-6">
              <span class="inline-block px-3 py-1 text-xs font-semibold text-green-700 bg-green-100 rounded-full mb-3">
                Artikel
              </span>
              <h2 class="text-xl font-bold text-gray-900 mb-2 line-clamp-2">
                {title}
              </h2>
              <p class="text-gray-600 text-sm mb-4 line-clamp-3">
                {description}
              </p>
              <div class="flex items-center justify-between text-sm text-gray-500">
                <span>{date}</span>
                <span class="text-green-600 font-medium">Baca lagi â†’</span>
              </div>
            </div>
          </a>
        </article>
      ))}
    </div>

    <div class="mt-12 text-center">
      <p class="text-gray-600">
        Menunjukkan {blogPosts.length} artikel tentang pengurusan Airbnb dan pelaburan hartanah di Melaka.
      </p>
    </div>
  </main>

  <style>
    .line-clamp-2 {
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
    .line-clamp-3 {
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
  </style>
</Layout>
